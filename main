#!/usr/bin/env ruby

require_relative './lib/person'
require_relative './lib/nameable'
require_relative './lib/decorator'
require_relative './lib/capitalize'
require_relative './lib/trimmer'
require_relative './lib/student'
require_relative './lib/teacher'
require_relative './lib/classroom'
require_relative './lib/book'
require_relative './lib/rental'
require 'date'

class App
  def initialize
    @input = nil
    @students = []
    @teachers = []
    @people_all = []
    @books = []
    @options = ['List all books','List all people','Create a person','Create a book','Create a rental','List all rentals for a given person id','Exit']  
  end

  def run
    loop do
      options
      get_input
      validate(1, 7)
      action_dispatch
    end
  end
  
  def options
    puts 'Ruby-School Library App'
    puts 'Please choose an option by entering a number:'
    @options.each_with_index { |option, ind| puts "#{ind + 1} #{option}" }
  end

  def get_input
    @input = gets.chomp
  end

  def validate(start, limit)
    unless (start.to_s..limit.to_s).to_a.include?(@input)
      loop do
        puts "Invalid entry. Please type a number between #{start}..#{limit}"
        @input = gets.chomp
        break if (start.to_s..limit.to_s).to_a.include?(@input)
      end
    end
  end

  def permission?
    true if @input == 'Y' || @input == 'y'
  end

  def action_dispatch
    case @input
    when 1.to_s
      books
    when 2.to_s
      people
    when 3.to_s
      person
    when 4.to_s
      book
    when 5.to_s
      rental
    when 7.to_s
      puts 'Programme ending...'
      exit(false)
    else
      puts "Error in action dispatch"
      exit(false)
    end
  end

  def age
    puts 'Age:'
    get_input
    validate(0, 120)
    @input
  end

  def name
    puts 'Name:'
    get_input
  end

  def student
    age_input = age
    name_input = name
    
    puts 'Has parent permission? [Y/N]:'
    get_input

    permission? ? @students << Student.new(age_input, name_input, permission?) : @students << Student.new(age_input, name_input)
    puts 'Student created successfully'
  end

  def teacher
    age_input = age
    name_input = name

    puts 'Specialization:'
    @teachers << Teacher.new(age_input, name_input, false, get_input)
    puts 'Teacher created successfully'
  end

  def person
    puts 'Do you want to create student (1) or teacher (2)? Type (1) or (2):'
    get_input
    validate(1, 2)
    @input == '1' ? student : teacher
  end

  def book
    puts 'Title:'
    title = get_input

    puts 'Author:'
    author = get_input

    @books << Book.new(title, author)
    puts 'Book created successfully'
  end

  def books
    @books.each { |book| puts "Title: #{book.title} Author: #{book.author}" }
  end

  def books_with_index
    @books.each_with_index { |book, index| puts "#{index}) Title: #{book.title} Author: #{book.author}" }
  end

  def people
    @people_all = []
    @students.each { |student| @people_all << "[Students] Name: #{student.name} ID: #{student.id} Age: #{student.age}" }
    @teachers.each { |teacher| @people_all << "[Teachers] Name: #{teacher.name} ID: #{teacher.id} Age: #{teacher.age}" }
    @people_all.each { |person| puts "#{person}" }
  end

  def people_all
    @people_all.each_with_index { |person, index| puts "#{index}) #{person}" }
  end

  def rental
    puts 'Select a book from the following list by number'
    books_with_index
    
    get_input
    book_for_rent = @books[validate(0, @books.length).to_i]

    puts 'Select a person from the following list by number (not id)'
    people_all

    get_input
    limit = people_all.length
    index = validate(0, limit)
    
    p(index)
    #person_who_rent = @people_all[index]
    #p(Rental.new( Date.today, book_for_rent, person_who_rent ))
    puts 'Rental created successfully'
  end
end

def main
  app = App.new
  app.run
end

main