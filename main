#!/usr/bin/env ruby

require_relative './lib/person'
require_relative './lib/nameable'
require_relative './lib/decorator'
require_relative './lib/capitalize'
require_relative './lib/trimmer'
require_relative './lib/student'
require_relative './lib/teacher'
require_relative './lib/classroom'
require_relative './lib/book'
require_relative './lib/rental'
require 'date'

class App
  def initialize
    @input = nil
    @options = ['List all books','List all people','Create a person','Create a book','Create a rental','List all rentals for a given person id','Exit']  
  end
  
  def list
    puts 'Ruby-School Library App'
    puts 'Please choose an option by entering a number:'
    @options.each_with_index { |option, ind| puts "#{ind + 1} #{option}" }
  end

  def get_input
    @input = gets.chomp
  end

  def validate(limit)
    unless ('1'..limit.to_s).to_a.include?(@input)
      loop do
        puts "Invalid entry. Please type a number between 1..#{limit}"
        @input = gets.chomp
        break if ('1'..limit.to_s).to_a.include?(@input)
      end
    end
  end

  def permission?
    true if @input == 'Y' || @input == 'y'
  end

  def action_dispatch
    case @input
    when 3.to_s
      person
    else
      "Error in action dispatch"
    end
  end

  def age
    puts 'Age:'
    get_input
    validate(120)
    @input
  end

  def name
    puts 'Name:'
    get_input
  end

  def student
    age_input = age
    name_input = name
    
    puts 'Has parent permission? [Y/N]:'
    get_input

    permission? ? Student.new(age_input, name_input, permission?) : Student.new(age_input, name_input)
    puts 'Student created successfully'
  end

  def teacher
    age_input = age
    name_input = name

    puts 'Specialization:'
    Teacher.new(age_input, name_input, get_input)
    puts 'Teacher created successfully'
  end

  def person
    puts 'Do you want to create student (1) or teacher (2)? Type (1) or (2):'
    get_input
    validate(2)
    @input == '1' ? student : teacher
  end


end

def main
  app = App.new
  app.list
  app.get_input
  app.validate(7)
  app.action_dispatch
end

main